<Window x:Class="VCPA.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VCPA"
        mc:Ignorable="d"
        Title="Your Personal Assistant" Height="223.676" Width="454.935">
    <Grid Margin="0,0,0,0">
        <Image x:Name="image1_png" Margin="0,0,0,0" Source="image1.png" Stretch="Fill"/>
        <ProgressBar x:Name="progressBar" Height="17" VerticalAlignment="Bottom" Margin="0,0,0,0" RenderTransformOrigin="0,0">
            <ProgressBar.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </ProgressBar.RenderTransform>
        </ProgressBar>
        

    </Grid>
</Window>
